<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <ScrollView
        android:id="@+id/cast_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        android:visibility="visible"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/primaryColor">

                <ImageView
                    android:id="@+id/cast_image"
                    android:layout_width="150dp"
                    android:layout_height="190dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/cast_name"
                        android:textColor="@color/primaryTextColor"
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Cast Name"/>

                    <View
                        android:id="@+id/bar"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/primaryDarkColor">
                    </View>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Age"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor"/>

                    <TextView
                        android:id="@+id/cast_age"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/primaryTextColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="100"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor"
                        android:text="Birthplace"/>

                    <TextView
                        android:id="@+id/cast_birthplace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/primaryTextColor"
                        android:text="Example"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:background="@color/primaryColor">

                <TextView
                    android:text="Biography"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryTextColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/cast_bio"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:text="ex"/>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Roles in Movies"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cast_movie_role_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:text="Roles in TV Shows"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/cast_show_role_recycler"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>